# MCP Gateway Environment Variables
# Copy this file to .env and customize

# OpenWeatherMap API Key (optional - demo mode if not set)
# Get your free API key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=

# Keycloak Admin Credentials
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Keycloak Client Secrets (change in production!)
MCP_CLIENT_SECRET=mcp-client-secret-change-me
API_GATEWAY_SECRET=api-gateway-secret-change-me

# Traefik Dashboard (disable in production)
TRAEFIK_DASHBOARD_ENABLED=true
